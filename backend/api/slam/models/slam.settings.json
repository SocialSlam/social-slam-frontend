{
  "kind": "collectionType",
  "connection": "default",
  "collectionName": "slams",
  "info": {
    "name": "Event"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "host": {
      "via": "hosted_slams",
      "plugin": "users-permissions",
      "model": "user"
    },
    "description": {
      "type": "text"
    },
    "images": {
      "collection": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "slam",
        "solo_act",
        "exhibition"
      ]
    },
    "tickets": {
      "collection": "ticket",
      "via": "slam"
    },
    "admission": {
      "type": "float"
    },
    "performances": {
      "collection": "performance",
      "via": "event"
    },
    "donations": {
      "via": "event",
      "collection": "donation"
    }
  }
}

{
  "kind": "collectionType",
  "connection": "default",
  "collectionName": "slams",
  "info": {
    "name": "Event"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "host": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "hosted_slams"
    },
    "description": {
      "type": "text"
    },
    "images": {
      "collection": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "slam",
        "solo_act",
        "exhibition"
      ]
    },
    "tickets": {
      "collection": "ticket",
      "via": "slam"
    },
    "admission": {
      "type": "float"
    },
    "donations": {
      "collection": "donation",
      "via": "event"
    },
    "category": {
      "model": "category",
      "via": "events"
    },
    "performers": {
      "plugin": "users-permissions",
      "collection": "user",
      "via": "events",
      "dominant": true
    }
  }
}
